                    PuntosATLETI=PuntosATLETI+3;
                    System.out.println("ATLETI:"+resultado_equipo1+"\nBARCA:"+resultado_equipo2 );
                    PPBARCA=PPBARCA+1;
                    PGATLETI=PGATLETI+1;
                    System.out.println("Resultado: El ganador es el atletico");
