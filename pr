                    PPBARCA=PPBARCA+1;
                    PGBAYER=PGBAYER+1;
                    System.out.println("Resultado: El ganador es el bayer");
                } else if (resultado_equipo1<resultado_equipo2) {
                	 System.out.println("BAYER"+resultado_equipo1+"\nBARCA:"+resultado_equipo2 );
                    PuntosBARCA=PuntosBARCA+3;
                    PPBAYER=PPBAYER+1;
                    PGBARCA=PGBARCA+1;
                    System.out.println("Resultado: El ganador es el barca");
                }
                else {
                	 System.out.println("BAYER:"+resultado_equipo1+"\nBARCA:"+resultado_equipo2 );
                    PuntosBARCA=PuntosBARCA+1;
                    PuntosBAYER=PuntosBAYER+1;
                    PEBARCA=PEBARCA+1;
                    PEBAYER=PEBAYER+1;
                    System.out.println("Resultado: Empate");
         	   break;
                }
           case 6:
        	   System.out.println("Ingrese los goles del atletico");
        	   int rnd11 = leer.nextInt();
         	  System.out.println("Ingrese los goles del bayern");
         	  int rnd12 = leer.nextInt();
                resultado_equipo1= rnd12;
                resultado_equipo2=rnd11;
                PJBAYER=PJBAYER+1;
                PJATLETI=PJATLETI+1;
                GolesBAYER=GolesBAYER+resultado_equipo1;
                GolesATLETI=GolesATLETI+resultado_equipo2;
                if (resultado_equipo1>resultado_equipo2){
                    PuntosBAYER=PuntosBAYER+3;
                    System.out.println("BAYER:"+resultado_equipo1+"\nATLETI:"+resultado_equipo2 );
                    PPATLETI=PPATLETI+1;
                    PGBAYER=PGBAYER+1;
                    System.out.println("Resultado: El ganador es el bayer");
