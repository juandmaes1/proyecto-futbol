	public static void tabla(int resultado_equipo1, int resultado_equipo2, int GolesBARCA,int GolesREAL,int GolesBAYER,int GolesATLETI,int GolesTotal, int PuntosBARCA,int PJBARCA,int PGBARCA,int PEBARCA,int PPBARCA,int PuntosBAYER,int PJBAYER,int PGBAYER,int PEBAYER,int PPBAYER,int PuntosREAL, int PJREAL,int PGREAL, int PEREAL, int PPREAL, int PuntosATLETI, int PJATLETI, int PGATLETI, int PEATLETI, int PPATLETI ) {
		 GolesTotal=GolesTotal+GolesREAL+GolesBAYER+GolesBARCA+GolesATLETI;
         JOptionPane.showMessageDialog(null,"Fin Del Campeonato");
         JOptionPane.showMessageDialog(null,"Resultados del Campeonato\nBARCA: PJ="+PJBARCA+" PG="+PGBARCA+" PE="+PEBARCA+"PP="+PPBARCA+"\nBAYER: PJ="+PJBAYER+" PG="+PGBAYER+" PER="+PEBAYER+"PP="+PPBAYER+"\nREAL: PJ="+PJREAL+" PG="+PGREAL+" PE="+PEREAL+"PP="+PPREAL+"\nATLETI: PJ="+PJATLETI+" PG="+PGATLETI+" PE="+PEATLETI+"PP="+PPATLETI);
         JOptionPane.showMessageDialog(null,"Los Puntajes Fueron los siguientes\nBARCA="+PuntosBARCA+"\nBAYER="+PuntosBAYER+"\nARG="+PuntosREAL+"\nMILAN="+"\nATLETI="+PuntosATLETI+"\nCITY=");
         JOptionPane.showMessageDialog(null,"Goles en total="+GolesTotal+"\nGoles BARCA="+GolesBARCA+"\nGoles REAL="+GolesREAL+"\nGoles BAYER="+GolesBAYER+"\nGoles ATLETI="+GolesATLETI);
}	 
	public static void RESULTADOS(int resultado_equipo1, int resultado_equipo2, int GolesBARCA,int GolesREAL,int GolesBAYER,int GolesATLETI,int GolesTotal, int PuntosBARCA,int PJBARCA,int PGBARCA,int PEBARCA,int PPBARCA,int PuntosBAYER,int PJBAYER,int PGBAYER,int PEBAYER,int PPBAYER,int PuntosREAL, int PJREAL,int PGREAL, int PEREAL, int PPREAL, int PuntosATLETI, int PJATLETI, int PGATLETI, int PEATLETI, int PPATLETI) {
		JOptionPane.showMessageDialog(null,"Resultados del Campeonato\nBARCA: PJ="+PJBARCA+" PG="+PGBARCA+" PE="+PEBARCA+"PP="+PPBARCA+"\nBAYER: PJ="+PJBAYER+" PG="+PGBAYER+" PER="+PEBAYER+"PP="+PPBAYER+"\nREAL: PJ="+PJREAL+" PG="+PGREAL+" PE="+PEREAL+"PP="+PPREAL+"\nATLETI: PJ="+PJATLETI+" PG="+PGATLETI+" PE="+PEATLETI+"PP="+PPATLETI);
	}	
	public static void goleadores(int resultado_equipo1, int resultado_equipo2, int GolesBARCA,int GolesREAL,int GolesBAYER,int GolesATLETI,int GolesTotal, int PuntosBARCA,int PJBARCA,int PGBARCA,int PEBARCA,int PPBARCA,int PuntosBAYER,int PJBAYER,int PGBAYER,int PEBAYER,int PPBAYER,int PuntosREAL, int PJREAL,int PGREAL, int PEREAL, int PPREAL, int PuntosATLETI, int PJATLETI, int PGATLETI, int PEATLETI, int PPATLETI ) {
		 JOptionPane.showMessageDialog(null,"Goles en total="+GolesTotal+"\nGoles BARCA="+GolesBARCA+"\nGoles REAL="+GolesREAL+"\nGoles BAYER="+GolesBAYER+"\nGoles ATLETI="+GolesATLETI);
		 if (GolesBARCA>GolesREAL && GolesBARCA > GolesBAYER && GolesBARCA > GolesATLETI ) {
			 System.out.println("el equipo con mas goles es el barcelona con " + GolesBARCA);
		 } else if (GolesREAL> GolesBAYER && GolesREAL > GolesATLETI) {
			 System.out.println("el equipo con mas goles es el Real Madird con " + GolesREAL);
		 }  else if (GolesBAYER> GolesATLETI) {
			 System.out.println("el equipo con mas goles es el Bayer con " + GolesBAYER);
		 }  else {
			 System.out.println("el equipo con mas goles es el Atletico con " + GolesATLETI);
		 }
	}	
