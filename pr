	}
	public static void ingresa(int resultado_equipo1, int resultado_equipo2, int GolesBARCA,int GolesREAL,int GolesBAYER,int GolesATLETI,int GolesTotal, int PuntosBARCA,int PJBARCA,int PGBARCA,int PEBARCA,int PPBARCA,int PuntosBAYER,int PJBAYER,int PGBAYER,int PEBAYER,int PPBAYER,int PuntosREAL, int PJREAL,int PGREAL, int PEREAL, int PPREAL, int PuntosATLETI, int PJATLETI, int PGATLETI, int PEATLETI, int PPATLETI ) {
		
	  
		while (opcion!=7) {
		System.out.println("seleccione un duelo");
		System.out.println("1. Real madrid vs barcelona");
           System.out.println("2. Real madrid vs bayern");
           System.out.println("3. real madrid vs atletico");
           System.out.println("4. barcelona vs atletico");
           System.out.println("5. barcelona vs bayern ");
           System.out.println("6. bayern vs atletico");
           System.out.println("7. salir");
           opcion = leer.nextInt();
           switch (opcion) {
           case 1:
        	  System.out.println("Ingrese los goles del real");
        	  int rnd1 = leer.nextInt();
        	  System.out.println("Ingrese los goles del barca");
        	  int rnd2 = leer.nextInt();
               resultado_equipo1= rnd2;
               resultado_equipo2=rnd1;
               PJBARCA=PJBARCA+1;
               PJREAL=PJREAL+1;
               GolesBARCA=GolesBARCA+resultado_equipo1;
               GolesREAL=GolesREAL+resultado_equipo2;
               if (resultado_equipo1>resultado_equipo2){
                   PuntosBARCA=PuntosBARCA+3;
                   System.out.println("BARCA:"+resultado_equipo1+"\nREAL:"+resultado_equipo2 );
                   PPREAL=PPREAL+1;
                   PGBARCA=PGBARCA+1;
                   System.out.println("Resultado: El ganador es el Barcelona");
               } else if (resultado_equipo1<resultado_equipo2) {
            	   System.out.println("BARCA"+resultado_equipo1+"\nREAL:"+resultado_equipo2 );
                   PuntosREAL=PuntosREAL+3;
                   PPBARCA=PPBARCA+1;
                   PGREAL=PGREAL+1;
                   System.out.println("Resultado: El ganador es el real madrid");
               }
               else {
            	   System.out.println("BARCA:"+resultado_equipo1+"\nREAL:"+resultado_equipo2 );
                   PuntosBARCA=PuntosBARCA+1;
                   PuntosREAL=PuntosREAL+1;
                   PEBARCA=PEBARCA+1;
                   PEREAL=PEREAL+1;
                   System.out.println("Resultado: Empate");
        	   break;
               }
               
           case 2: 
        	   System.out.println("Ingrese los goles del real");
        	   int rnd3 = leer.nextInt();
         	  System.out.println("Ingrese los goles del bayern");
         	  int rnd4 = leer.nextInt();
                resultado_equipo1= rnd4;
                resultado_equipo2=rnd3;
                PJBAYER=PJBAYER+1;
                PJREAL=PJREAL+1;
                GolesBAYER=GolesBAYER+resultado_equipo1;
                GolesREAL=GolesREAL+resultado_equipo2;
                if (resultado_equipo1>resultado_equipo2){
                    PuntosBAYER=PuntosBAYER+3;
                    System.out.println("BAYER:"+resultado_equipo1+"\nREAL:"+resultado_equipo2 );
                    PPREAL=PPREAL+1;
                    PGBAYER=PGBAYER+1;
                    System.out.println("Resultado: El ganador es el Bayer");
                } else if (resultado_equipo1<resultado_equipo2) {
                	 System.out.println("BAYER"+resultado_equipo1+"\nREAL:"+resultado_equipo2 );
                    PuntosREAL=PuntosREAL+3;
                    PPBAYER=PPBAYER+1;
                    PGREAL=PGREAL+1;
                    System.out.println("Resultado: El ganador es el real madrid");
                }
                else {
                	 System.out.println("BAYER:"+resultado_equipo1+"\nREAL:"+resultado_equipo2 );
                    PuntosBAYER=PuntosBAYER+1;
                    PuntosREAL=PuntosREAL+1;
                    PEBAYER=PEBAYER+1;
                    PEREAL=PEREAL+1;
                    System.out.println("Resultado: Empate");
         	   break;
                }
                
           case 3:
        	   System.out.println("Ingrese los goles del real");
        	   int rnd6 = leer.nextInt();
         	  System.out.println("Ingrese los goles del atletico");
         	  int rnd5 = leer.nextInt();
                resultado_equipo1= rnd5;
                resultado_equipo2=rnd6;
                PJATLETI=PJATLETI+1;
                PJREAL=PJREAL+1;
