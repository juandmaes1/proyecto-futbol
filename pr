	public static void administrador(String capi,String jugadores1[],String jugadores2[] ,String jugadores3[],String jugadores4[]) {
		while (opcion!=5) {
			System.out.println("seleccione un equipo");
			System.out.println("1. Real madrid");
	           System.out.println("2. Barcelona");
	           System.out.println("3. atletico");
	           System.out.println("4. bayern");
	           System.out.println("5. Salir ");   
	           opcion = leer.nextInt();
	           switch (opcion) {
	           case 1:
	        	   equipo1(jugadores1,capi);
	        	   break;
	           case 2: 
	        	   equipo2(jugadores2, capi);
	        	   break;
	           case 3:
	        	   equipo3(jugadores3, capi);
	        	   break;
	           case 4:
	        	   equipo4(jugadores4, capi);
	        	   break;	            	   
	           
	           }
		
			}
	}
		public static void equipo1(String jugadores1[], String capi) {
			
			while (opcion!=6) {
				System.out.println("seleccione una opcion");
				System.out.println("1. ver jugadores");
		           System.out.println("2. cambiar de poscion");
		           System.out.println("3. ingresar nuevo jugador");
		           System.out.println("4. sustituir");
		           System.out.println("5. elegir capitan ");
		           System.out.println("6. Salir ");   
		           opcion = leer.nextInt();
		           switch (opcion) {
		           case 1:
		        	   verposciones(jugadores1,capi);
		        	   break;
		           case 2: 
		        	   cambiar(jugadores1);
		        	   break;
		           case 3:
		        	   ingresar(jugadores1);
		        	   break;
		           case 4:
		        	   sustituir(jugadores1);
		        	   break;
		           case 5:
		        	   elegircapi(jugadores1, capi);
		        	   break;		              	   
		           
		           }
			
				}
				
				
			}

			public static void verposciones(String jugadores1[],String capi) {
				System.out.println("Real Madrid :");
				for(int i=0;i<jugadores1.length;i++)
		        {
		            System.out.println(jugadores1[i]);
		        }
				System.out.println("el capitan es " + capi);
			}
			
			public static void cambiar(String jugadores1[]) {
				System.out.println("CAMBIO "+ i + "A que poscion quiere cambairlo");
				int opcion1 = leer.nextInt();				
				System.out.println("que jugador quiere en esa pocscion");				
				opcion = leer.nextInt();
				Collections.swap(Arrays.asList(jugadores1), opcion1, opcion);
		        System.out.println(Arrays.toString(jugadores1));
				
				for(int k=0;k<jugadores1.length;k++)
		        {
		            System.out.println(jugadores1[k]);
		        }
				 
		}	 
			public static void ingresar(String jugadores1[]) {
				System.out.println("Desea aÃ±adir un jugador mas al equipo");
				String sd = leer.nextLine();
				if (jugadores1.length>17) {
					System.out.println("Ya esta el maximo de jugadores en el equipo");
				} else {
					System.out.println("Coloque el dorsal y nombre de su jugador");
					String sed = leer.nextLine();
					jugadores1[16]= sed;
				}
			}
				 
			
			public static void sustituir(String jugadores1[]) {
				for(int i=0;i<3;i++) {				
					System.out.println("CAMBIO "+ i + "A que poscion quiere cambairlo");
					int opcion1 = leer.nextInt();				
					System.out.println("que jugador quiere en esa pocscion");				
					opcion = leer.nextInt();
					Collections.swap(Arrays.asList(jugadores1), opcion1, opcion);
			        System.out.println(Arrays.toString(jugadores1));
					
					for(int k=0;k<jugadores1.length;k++)
			        {
			            System.out.println(jugadores1[k]);
			        }
					 
					}
			}	
				 
				
			public static void elegircapi(String jugadores1[], String capi) {
				
				System.out.println("Ingrese el dorsal del capitan para el equipo");
				opcion = leer.nextInt();
				capi = jugadores1 [opcion];
			}
								
	
