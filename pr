                	 System.out.println("BAYER"+resultado_equipo1+"\nATLETI:"+resultado_equipo2 );
                    PuntosATLETI=PuntosATLETI+3;
                    PPBAYER=PPBAYER+1;
                    PGATLETI=PGATLETI+1;
                    System.out.println("Resultado: El ganador es el atletico");
                }
                else {
                    JOptionPane.showMessageDialog(null,"BAYER:"+resultado_equipo1+"\nATLETI:"+resultado_equipo2 );
                    PuntosATLETI=PuntosATLETI+1;
                    PuntosBAYER=PuntosBAYER+1;
                    PEATLETI=PEATLETI+1;
                    PEBAYER=PEBAYER+1;
                    System.out.println("Resultado: Empate");
         	   break;
         	   
                }
           }
           GolesTotal=GolesTotal+GolesREAL+GolesBAYER+GolesBARCA+GolesATLETI;
           JOptionPane.showMessageDialog(null,"Fin Del Campeonato");
           JOptionPane.showMessageDialog(null,"Resultados del Campeonato\nBARCA: PJ="+PJBARCA+" PG="+PGBARCA+" PE="+PEBARCA+"PP="+PPBARCA+"\nBAYER: PJ="+PJBAYER+" PG="+PGBAYER+" PER="+PEBAYER+"PP="+PPBAYER+"\nREAL: PJ="+PJREAL+" PG="+PGREAL+" PE="+PEREAL+"PP="+PPREAL+"\nATLETI: PJ="+PJATLETI+" PG="+PGATLETI+" PE="+PEATLETI+"PP="+PPATLETI);
           JOptionPane.showMessageDialog(null,"Los Puntajes Fueron los siguientes\nBARCA="+PuntosBARCA+"\nBAYER="+PuntosBAYER+"\nARG="+PuntosREAL+"\nMILAN="+"\nATLETI="+PuntosATLETI+"\nCITY=");
           JOptionPane.showMessageDialog(null,"Goles en total="+GolesTotal+"\nGoles BARCA="+GolesBARCA+"\nGoles REAL="+GolesREAL+"\nGoles BAYER="+GolesBAYER+"\nGoles ATLETI="+GolesATLETI);
		}
}
		
	
public static void simular(String jugadores1[],String jugadores2[],String jugadores3[],String jugadores4[]) {
	 JOptionPane.showMessageDialog(null,"Bienvenido al campeonato de futbol");
	 Partidos();
     Gacias();
}
public static void Gacias(){
    JOptionPane.showMessageDialog(null,"Gracias a los equipos por participar");
}
public static void Partidos(){
    int resultado_equipo1, resultado_equipo2;
    int GolesBARCA, GolesREAL, GolesBAYER, GolesMILAN, GolesATLETI, GOlesCITY, GolesTotal;
    
    int PuntosBARCA, PJBARCA, PGBARCA,PEBARCA,PPBARCA,PuntosBAYER,PJBAYER,PGBAYER,PEBAYER,PPBAYER, PuntosREAL,  PJREAL, PGREAL, PEREAL,PPREAL, PuntosMILAN, PJMILAN,PGMILAN,PEMILAN, PPMILAN, PuntosATLETI,PJATLETI,PGATLETI,PEATLETI,PPATLETI,PuntosCITY, PJCITY,PGCITY,PECITY,PPCITY;
    GolesTotal=0;
    GolesBARCA=0;
    GolesREAL=0;
    GolesBAYER=0;
    GolesMILAN=0;
    GolesATLETI=0;
    GOlesCITY=0;
    PuntosBARCA=0;
    PJBARCA=0;
    PGBARCA=0;
    PEBARCA=0;
    PPBARCA=0;
    PuntosBAYER=0;
    PJBAYER=0;
    PGBAYER=0;
    PEBAYER=0;
    PPBAYER=0;
    PuntosREAL=0;
    PJREAL=0;
    PGREAL=0;
    PEREAL=0;PPREAL=0;
    PuntosMILAN=0;
    PJMILAN=0;
    PGMILAN=0;
    PEMILAN=0;
    PPMILAN=0;
    PuntosATLETI=0;
    PJATLETI=0;
    PGATLETI=0;
    PEATLETI=0;
    PPATLETI=0;
    PuntosCITY=0;
    PJCITY=0;
    PGCITY=0;
    PECITY=0;
    PPCITY=0;
   int BARCAVBAYER=0;
   int   BARCAVREAL=0;
   int BARCAVATLETI=0;
   int BARCAVMILAN=0;
   int BAYERVATLETI=0;
   int REALVCITY=0;
   int BAYERVREAL=0;
   int BARCAVCITY=0;
   int BAYERVMILAN=0;
   int REALVATLETI=0;
   int BAYERVCITY=0;
   int REALVMILAN=0;
   int MILANVATLETI=0;
   int MILANVCITY=0;
   int ATLETIVCITY=0;
    Random rnd1= new Random();
    Random rnd2= new Random();
    JOptionPane.showMessageDialog(null,"Primera jornada\nBARCA vs BAYER\nREAL vs MILAN\nATLETI vs CITY");
    if (BARCAVBAYER==0){
        JOptionPane.showMessageDialog(null,"BARCA VS BAYER");
        resultado_equipo1=rnd1.nextInt(0,4);
        resultado_equipo2=rnd2.nextInt(0,4);
        PJBAYER=PJBAYER+1;
        PJBARCA=PJBARCA+1;
        GolesBARCA=GolesBARCA+resultado_equipo1;
        GolesBAYER=GolesBAYER+resultado_equipo2;//aaa
        if (resultado_equipo1>resultado_equipo2){
            PuntosBARCA=PuntosBARCA+3;
            JOptionPane.showMessageDialog(null,"BARCA:"+resultado_equipo1+"\nBAYER:"+resultado_equipo2 );
            PPMILAN=PPMILAN+1;
            PGBARCA=PGBARCA+1;
        } else if (resultado_equipo1<resultado_equipo2) {
            JOptionPane.showMessageDialog(null,"BARCA"+resultado_equipo1+"\nBAYER:"+resultado_equipo2 );
            PuntosBAYER=PuntosBAYER+3;
            PPBARCA=PPBARCA+1;
            PGBAYER=PGBAYER+1;
        }
        else {
            JOptionPane.showMessageDialog(null,"BARCA:"+resultado_equipo1+"\nBAYER:"+resultado_equipo2 );
            PuntosBARCA=PuntosBARCA+1;
            PuntosBAYER=PuntosBAYER+1;
            PEBARCA=PEBARCA+1;
            PEBAYER=PEBAYER+1;
        }
    }
    if (REALVMILAN==0) {
        JOptionPane.showMessageDialog(null,"REAL VS MILAN");
        resultado_equipo1=rnd1.nextInt(0,4);
        resultado_equipo2=rnd2.nextInt(0,4);
        PJREAL=PJREAL+1;
        PJMILAN=PJMILAN+1;
        GolesREAL=GolesBARCA+resultado_equipo1;
        GolesMILAN=GolesBAYER+resultado_equipo2;
        if (resultado_equipo1>resultado_equipo2){
            PuntosREAL=PuntosREAL+3;
            JOptionPane.showMessageDialog(null,"Real:"+resultado_equipo1+"\n Milan:"+resultado_equipo2 );
            PPMILAN=PPMILAN+1;
            PGREAL=PGREAL+1;
        } else if (resultado_equipo1<resultado_equipo2) {
            JOptionPane.showMessageDialog(null,"REAL:"+resultado_equipo1+"\nMILAN:"+resultado_equipo2 );
            PuntosMILAN=PuntosMILAN+3;
            PPREAL=PPREAL+1;
            PGMILAN=PGMILAN+1;
        }
        else {
            JOptionPane.showMessageDialog(null,"REAL:"+resultado_equipo1+"\nMILAN:"+resultado_equipo2 );
            PuntosREAL=PuntosREAL+1;
            PuntosMILAN=PuntosMILAN+1;
            PEMILAN=PEMILAN+1;
            PEREAL=PEREAL+1;
        }
    }
    if (ATLETIVCITY==0) {
        JOptionPane.showMessageDialog(null,"ATLETI VS CITY");
        resultado_equipo1=rnd1.nextInt(0,4);
        resultado_equipo2=rnd2.nextInt(0,4);
        PJATLETI=PJATLETI+1;
        PJCITY=PJCITY+1;
        GolesATLETI=GolesATLETI+resultado_equipo1;
        GOlesCITY=GOlesCITY+resultado_equipo2;
        if (resultado_equipo1>resultado_equipo2){
            PuntosATLETI=PuntosATLETI+3;
            JOptionPane.showMessageDialog(null,"ATLETI:"+resultado_equipo1+"\nCITY:"+resultado_equipo2);
            PPCITY=PPCITY+1;
            PGATLETI=PGATLETI+1;
        } else if (resultado_equipo1<resultado_equipo2) {
            JOptionPane.showMessageDialog(null,"ATLETI:"+resultado_equipo1+"\nCITY:"+resultado_equipo2);
            PuntosCITY=PuntosCITY+3;
            PPREAL=PPATLETI+1;
            PGCITY=PGCITY+1;
        }
        else {
            JOptionPane.showMessageDialog(null,"ATLETI:"+resultado_equipo1+"\nCITY:"+resultado_equipo2);
            PuntosATLETI=PuntosATLETI+1;
            PuntosCITY=PuntosCITY+1;
            PECITY=PECITY+1;
            PEATLETI=PEATLETI+1;
        }
    }
    JOptionPane.showMessageDialog(null,"Puntajes del campeonato\nBARCA: PJ="+PJBARCA+" PG="+PGBARCA+" PE="+PEBARCA+"PP="+PPBARCA+"\nBAYER: PJ="+PJBAYER+" PG="+PGBAYER+" PE="+PEBAYER+"PP="+PPBAYER+"\nREAL: PJ="+PJREAL+" PG="+PGREAL+" PE="+PEREAL+"PP="+PPREAL+"\nMILAN: PJ="+PJMILAN+" PG="+PGMILAN+" PE="+PEMILAN+"PP="+PPMILAN+"\nATLETI: PJ="+PJATLETI+" PG="+PGATLETI+" PE="+PEATLETI+"PP="+PPATLETI+"\nCITY: PJ="+PJCITY+" PG="+PGCITY+" PE="+PECITY+"PP="+PPCITY);
    JOptionPane.showMessageDialog(null,"Segunda Jornada\nCOL vs ARG\nBR vs PER\nCHI vs URU");
    if (BAYERVREAL==0) {
        JOptionPane.showMessageDialog(null,"BAYER VS REAL");
        resultado_equipo1=rnd1.nextInt(0,4);
        resultado_equipo2=rnd2.nextInt(0,4);
        PJREAL=PJREAL+1;
        PJBAYER=PJBAYER+1;
        GolesBAYER=GolesBAYER+resultado_equipo1;
        GolesREAL=GolesREAL+resultado_equipo2;
        if (resultado_equipo1>resultado_equipo2){
            PuntosBAYER=PuntosBAYER+3;
            JOptionPane.showMessageDialog(null,"BAYER:"+resultado_equipo1+"\nREAL:"+resultado_equipo2);
            PPREAL=PPREAL+1;
            PGBAYER=PGBAYER+1;
        } else if (resultado_equipo1<resultado_equipo2) {
